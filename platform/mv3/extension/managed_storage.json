{
  "$schema": "http://json-schema.org/draft-03/schema#",
  "type": "object",
  "properties": {
    "noFiltering": {
      "title": "List of domains for which no filtering should occur",
      "type": "array",
      "items": { "type": "string" }
    },
    "disableFirstRunPage": {
      "title": "Disable first run page",
      "type": "boolean"
    },
    "adVault": {
      "title": "AdVault configuration",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "img_src": {
            "title": "image source",
            "type": "string"
          },
          "id": {
            "title": "Ad ID",
            "type": "string"
          },
          "domain": {
            "title": "domain from ad",
            "type": "string"
          }
        }
      }
    }
  }
}
